<UserControl x:Class="AdConta.FalloAlCargarUC"
             x:Name="UCFalloAlCargar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdConta"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
            Background="{StaticResource BackgroundAppColor}">
        <TextBlock Text="{Binding ElementName=UCFalloAlCargar, Path=MensajeFallo}" HorizontalAlignment="Left" VerticalAlignment="Center" 
                   ToolTip="{Binding ElementName=UCFalloAlCargar, Path=MensajeFallo}"/>
    </Border>
</UserControl>
